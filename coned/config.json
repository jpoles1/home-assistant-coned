{
    "name": "ConEd/ORU Electric Meter",
    "version": "0.6.0",
    "slug": "coned",
    "description": "Read your ConEd/ORU meter energy usage into your Home Assistant via MQTT",
    "url": "https://github.com/jpoles1/home-assistant-coned",
    "panel_icon": "mdi:chart-areaspline",
    "startup": "application",
    "boot": "auto",
    "ports": { "3000/tcp": 3000 },
    "ports_description": { "3000/tcp": "Web Server (optional)" },
    "host_network": "False",
    "arch": [
      "aarch64",
      "amd64",
      "armv7",
      "i386"
    ],
    "hassio_api": true,
    "hassio_role": "default",
    "homeassistant_api": true,
    "options":
    {
      "email": null,
      "password": null,
      "mfa_secret": null,
      "account_uuid": null,
      "meter_number": null,
      "site": ["coned", "oru"]
    },
    "schema":
    {
      "email": "email",
      "password": "str",
      "mfa_type": "str",
      "mfa_secret": "str",
      "account_uuid": "str",
      "meter_number": "str",
      "site": "list(coned|oru)"
     }
  }
  